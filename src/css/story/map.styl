/* CUSTOM STORY STYLE */
.map
	width 100%

	#pubsMap
		width 100%
		height 80vh
		margin-bottom 5rem

	#map-table
		max-width $column-width
		margin 0 auto 8rem auto
		padding 0 1rem

		button
			width 8rem
			height 2.5rem
			margin 0 auto
			border 2px solid $brown-dark
			background-color lighten($tan-medium, 25)
			text-transform uppercase
			set-type-size('small', true)
			display none
			color $brown-dark
			&:hover
				background-color lighten($tan-medium, 15)

			&.is-visible
				display flex
				justify-content center

		.table__directions
			display flex
			flex-direction row
			align-items center
			margin-bottom 1rem

			p
				font-family $national
				font-weight 700
				text-transform uppercase
				margin 0
				color $brown-dark

			img
				width 4.5rem
				margin-left 0.5rem

		.pub-adds
			height 7rem
			overflow hidden
			position relative
			margin-bottom 1rem

			&.is-visible
				overflow auto
				height auto

			.labels
				display flex
				flex-direction row
				justify-content space-between

				p
					color $tan-medium
					text-transform uppercase
					font-family $national
					set-type-size('root', true)
					margin 0

			.table-pub-num
				width calc(5% + 1rem)
				padding-right 1rem
				text-align right

			.table-pub-name
				width calc(35% + 1rem)
				padding-right 1rem

			.table-pub-add
				width calc(60% + 1rem)
				padding-right 1rem

			.g-vis

				.table-row
					display flex
					flex-direction row
					border-bottom 1px solid $tan-medium
					padding 0.5rem 0

					p
						margin 0
						color $brown-dark
						font-family $national
						set-type-size('root', true)

			.fade
				position absolute
				bottom 0
				left 0
				width 100%
				height 3rem
				background-image linear-gradient(rgba($tan-light, 0), rgba($tan-light, 1))
				z-index setOverlay('overlay')
				display none

				&.is-visible
					display inline-block
