/* CUSTOM STORY STYLE */
.combos
	max-width 80rem
	margin 0 auto 3rem auto

	.combo-wrapper
		width 100%
		display flex
		flex-direction row
		justify-content space-between
		margin 3rem auto

		.combo-block
			display flex
			flex-direction column
			width 25%
			padding 1rem

			.addition
				display flex
				flex-direction row
				align-items center
				width 100%
				justify-content center
				height 3rem

				.text
					color $brown-dark
					font-family $national
					text-transform uppercase
					border-bottom 1px solid $brown-dark
					margin 0
					text-align center
					width calc(50% - 3rem)

				.plus
					color $red-accent
					font-weight 700
					set-type-size('xxxx-large', true)
					margin 0
					width 3rem
					text-align center

			.sketches
				display flex
				flex-direction row

				img
					width 50%

			.example
				text-align center
				set-type-size('xxxx-large', true)
				font-family $pirata
				color $brown-dark

			.pub-counts
				height 12rem
				overflow hidden
				position relative
				margin-bottom 1rem

				&.is-visible
					overflow auto
					height auto

				.labels
					display flex
					flex-direction row
					justify-content space-between

					p
						color $tan-medium
						text-transform uppercase
						font-family $national
						set-type-size('root', true)
						margin 0

				.fade
					position absolute
					bottom 0
					left 0
					width 100%
					height 3rem
					background-image linear-gradient(rgba($tan-light, 0), rgba($tan-light, 1))
					z-index setOverlay('overlay')
					display none

					&.is-visible
						display inline-block

			button
				width 8rem
				height 2.5rem
				margin 0 auto
				border 2px solid $brown-dark
				background-color lighten($tan-medium, 25)
				text-transform uppercase
				set-type-size('small', true)
				display none
				color $brown-dark
				&:hover
					background-color lighten($tan-medium, 15)

				&.is-visible
					display inline-block

	.table-row
		display flex
		flex-direction row
		justify-content space-between
		border-bottom 1px solid $tan-medium
		padding 0.5rem 0

		p
			margin 0
			color $brown-dark
			font-family $national
			set-type-size('root', true)

#noun-noun
	.plus
		set-type-size('xx-large', true)
