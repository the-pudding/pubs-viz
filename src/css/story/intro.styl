.intro
	margin 0 auto
	padding 4rem 0 3rem 0

	img
		max-width 25rem
		margin 0 auto

	&__hed
		max-width 40rem
		margin 2rem auto 4rem auto
		text-align center
		font-family $pirata
		font-size 4rem
		line-height 1
		color $brown-dark
		padding 0 1rem
		+mq('bp-4')
			font-size 5rem
		+mq('bp-4')
			font-size 6.5rem

	&__dek
		max-width $column-width
		margin 0 auto
		margin-top 1rem
		text-align center

	&__byline
		max-width $column-width
		margin 1rem auto 2rem auto
		text-align center
		font-family $national
		color $brown-dark

		a
			text-transform uppercase
			color $brown-dark

	&__time
		display block
		max-width $column-width
		margin 0 auto
		margin-top 1rem
		text-align center
