/* CUSTOM STORY STYLE */
.madlib
	width 100%
	margin-bottom 3rem

	.nav
		width 100%
		height 8.25rem
		border-top 1px solid $tan-medium
		border-bottom 1px solid $tan-medium
		display flex
		padding 0 1rem
		justify-content space-between
		align-items center
		margin-bottom 3rem
		flex-direction column
		+mq('bp-3')
			flex-direction row
			height 6.5rem
		+mq('bp-5')
			height 4rem

		&__directions
			display flex
			flex-direction row
			align-items center
			justify-content center
			color $brown-dark
			width 15rem
			padding 0.25rem 0 0 0
			+mq('bp-3')
				flex-direction column
				width 9rem
				padding 0.25rem 0
				justify-content start
				align-items flex-start
			+mq('bp-4')
				flex-direction row
				align-items center
				width 15rem
			+mq('bp-5')
				padding 0

			p
				set-type-size('root', true)
				font-family $national
				font-weight 700
				text-transform uppercase
				margin 0
				// +mq('bp-4')
				// 	set-type-size('root', true)

			img
				width 4.5rem
				margin-left 0.5rem
				// +mq('bp-4')
				// 	width 4.5rem

		&__choices
			display flex
			flex-direction row
			width 100%
			justify-content space-between
			padding 0.25rem 0
			flex-wrap wrap
			+mq('bp-3')
				width calc(100% - 9rem)
			+mq('bp-5')
				padding 0
				width calc(100% - 15rem)

			.is-selected
				font-weight 700
				color $red-accent

			p
				set-type-size('root', true)
				font-family $national
				color $tan-medium
				text-transform uppercase
				margin 0
				width 50%
				padding 0.25rem
				text-align center
				&:hover
					font-weight 700
				+mq('bp-3')
					padding 0.5rem
				+mq('bp-5')
					width 8rem
					padding 0

.dropdown-wrapper
	max-width 30rem
	margin 0 auto 3rem auto
	padding 0 1rem
	display flex
	flex-direction row
	justify-content space-between
	+mq('bp-3')
		margin 0 auto 5rem auto

	.dropdown-group
		position relative
		width 100%
		margin 0 auto
		height 6rem
		display flex
		justify-content center

		&:before
			content ''
			position absolute
			z-index 900
			top 10px
			left 10px
			right 10px
			bottom 10px
			border 2px solid $brown-dark
			pointer-events none

		select
			width 100%
			border 0
			background-color transparent
			set-type-size('xx-large', true)
			border-radius none
			height 6rem
			font-family $pirata
			color $brown-dark
			position absolute
			appearance none
			text-indent 2rem
			background-image url('assets/images/arrow.png')
			background-repeat no-repeat
			background-position 92% 50%
			background-size 35px 35px
			+mq('bp-2-5')
				set-type-size('xxx-large', true)
			+mq('bp-3')
				set-type-size('xxxx-large', true)

		.select-bg
			position absolute
			width 100%
			border 5px solid $brown-dark
			background-color lighten($tan-medium, 25)
			height 6rem

.map-sentence
	max-width 50rem
	margin 0 auto
	padding 0 1rem

	p
		set-type-size('large', true)
		text-align center
		line-height 1.5
		color $brown-dark
		+mq('bp-3')
			set-type-size('x-large', true)

		.red-highlight
			border-bottom 2px solid $red-accent
			font-family $pirata
			set-type-size('x-large', true)
			+mq('bp-3')
				set-type-size('xx-large', true)
