/* CUSTOM STORY STYLE */
.madlib
	width 100%
	margin-bottom 3rem

	.nav
		width 100%
		height 4rem
		border-top 1px solid $tan-medium
		border-bottom 1px solid $tan-medium
		display flex
		flex-direction row
		padding 0 1rem
		justify-content space-between
		align-items center
		margin-bottom 3em

		&__directions
			p
				font-family $national
				font-weight 700
				text-transform uppercase
				margin 0

		&__choices
			display flex
			flex-direction row
			width 75%
			justify-content space-between

			p
				font-family $national
				color $tan-medium
				text-transform uppercase
				margin 0

.dropdown-wrapper
	max-width $column-width
	margin 0 auto
	padding 0 1rem
	display flex
	flex-direction row
	justify-content space-between

	select
		width calc(50% - 1rem)
		border 2px solid $dark-brown
		background-color lighten($tan-medium, 25)
		set-type-size('large', true)
		border-radius none
		height 5rem

.map-sentence
	max-width 50rem
	margin 0 auto
	padding 0 1rem

	p
		set-type-size('xx-large', true)
		text-align center
		line-height 1.5

		.red-highlight
			border-bottom 2px solid $red-accent
			font-weight 700
